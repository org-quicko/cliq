{
  "name": "@org.quicko.cliq/core",
  "version": "1.0.0-beta.0",
  "description": "A library in typescript for common entities of Cliq",
  "author": "Prateik Lohani <prateik.lohani@quicko.com>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "npm cache clean --force",
    "build-release": "tsc --build && npm ci --omit=dev",
    "prebuild": "rm -rf dist && npm run clean && eslint .",
    "build": "tsc --build"
  },
  "license": "ISC",
  "files": [
    "dist/*"
  ],
  "exports": {
		".": "./dist/index.js",
		"./beans": "./dist/src/beans/index.js",
		"./enums": "./dist/src/enums/index.js"
	},
  "typesVersions": {
		"*": {
			"beans": [
				"dist/src/beans/index.d.ts"
			],
			"enums": [
				"dist/src/enums/index.d.ts"
			]
		}
	},
	"directories": {
		"lib": "./dist"
	},
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
		"@types/node": "^22.7.0",
		"@typescript-eslint/eslint-plugin": "^8.17.0",
		"@typescript-eslint/parser": "^8.17.0",
		"esbuild-plugin-eslint": "^0.3.7",
		"eslint": "^8.2.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-prettier": "^9.1.0",
		"eslint-import-resolver-typescript": "^3.7.0",
		"typescript": "^5.6.2"
	}
}
